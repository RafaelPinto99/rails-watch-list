<div class="container mt-5">
  <h2><%= @list.name %></h2>
  <h4>Bookmarks</h4>

  <% if @list.bookmarks.any? %>
    <ul class="list-group">
      <% @list.bookmarks.each do |bookmark| %>
        <li class="list-group-item d-flex justify-content-between">
          <%= bookmark.movie.title %>
          <%= link_to 'Remove', bookmark_path(bookmark), method: :delete, class: 'btn btn-danger btn-sm' %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No bookmarks in this list yet.</p>
  <% end %>

  <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary mt-3' %>
  <%= link_to 'Back to Lists', lists_path, class: 'btn btn-outline-secondary mt-3' %>
</div>
